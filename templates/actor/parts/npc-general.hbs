<div class="movement flexcol">
  <label class="block-label" for="system.movement">{{localize 'ROGUE.Movement.Movement'}}</label>
  <div class="attributes flexrow">
    <div class="combat resource">
      <label for="system.movement.combat" class="resource-label">{{localize 'ROGUE.Movement.Combat'}}</label>
      <input class="clear-input" type="number" name="system.movement.combat" value="{{system.movement.combat}}" data-dtype="Number"/>
      <i class="far fa-question-circle" title="{{localize 'ROGUE.Movement.CombatUnits'}}" style="color: #cdab8f;"></i>
    </div>
    <div class="exploration resource">
      <label for="system.movement.exploration" class="resource-label">{{localize 'ROGUE.Movement.Exploration'}}</label>
      <input class="clear-input" type="number" name="system.movement.exploration" value="{{system.movement.exploration}}" data-dtype="Number"/>
      <i class="far fa-question-circle" title="{{localize 'ROGUE.Movement.ExplorationUnits'}}" style="color: #cdab8f;"></i>
    </div>
    <div class="journey resource">
      <label for="system.movement.journey" class="resource-label">{{localize 'ROGUE.Movement.Journey'}}</label>
      <input class="clear-input" type="number" name="system.movement.journey" value="{{system.movement.journey}}" data-dtype="Number"/>
      <i class="far fa-question-circle" title="{{localize 'ROGUE.Movement.JourneyUnits'}}" style="color: #cdab8f;"></i>
    </div>
  </div>
</div>

<div class="item-block inventory">
  <div class="block-header">
    <h2>{{localize 'ROGUE.Inventory'}}</h2>
    <div class="create-item">
      <button class="drop-btn"><i class="fas fa-plus"></i>{{localize 'ROGUE.ItemAdd'}}</button>
      <div class="drop-content">
        <a class="item-add item-create" data-type="loot"><i class="fas fa-plus"></i>{{localize 'ROGUE.CreateLoot'}}</a>
        <a class="item-add item-create" data-type="protection"><i class="fas fa-plus"></i>{{localize 'ROGUE.CreateProtection'}}</a>
        <a class="item-add item-create" data-type="weapon"><i class="fas fa-plus"></i>{{localize 'ROGUE.CreateWeapon'}}</a>
      </div>
    </div>
  </div>
  <ol class="items-list">
    {{#each gear as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <a class="item-image rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize 'ROGUE.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'ROGUE.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>

<div class="item-block spells">
  <div class="block-header">
    <h2>{{localize 'ROGUE.Spells'}}</h2>
    <a class="item-add item-create" title="{{localize 'ROGUE.CreateSpell'}}" data-type="spell"><i class="fas fa-plus"></i>{{localize 'ROGUE.ItemAdd'}}</a>
  </div>
  <ol class="items-list">
    {{#each spell as |item id|}}
      <li class="item flexrow" data-item-id="{{item._id}}">
        <div class="item-name">
          <a class="item-image rollable" data-roll-type="item"><img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/></a>
          <h4>{{item.name}}</h4>
        </div>
        <div class="item-controls">
          <a class="item-control item-edit" title="{{localize 'ROGUE.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'ROGUE.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
