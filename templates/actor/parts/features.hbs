<div class="item-block spells">
  <div class="block-header">
    <h2>{{localize 'ROGUE.FeaturePlural'}}</h2>
    <a class="item-add item-create" title="{{localize 'ROGUE.CreateFeature'}}" data-type="feature"><i class="fas fa-plus"></i>{{localize 'ROGUE.ItemAdd'}}</a>
  </div>
  <ol class="items-list">
    {{#each feature as |item id|}}
      <li class="item {{item.type}}" data-item-id="{{item._id}}">
        <div class="item-info flexrow">
          <a class="item-image rollable" data-roll-type="item" style="background-image: url({{item.img}})"></a>
          <h4 class="item-name">{{item.name}}</h4>
        </div>
        <div class="item-summary">
          {{{item.system.description}}}
        </div>
        <div class="item-controls">
          <a class="item-control rollable" data-roll-type="show" title="{{localize 'ROGUE.ItemShow'}}"><i class="fa fa-comment"></i></a>
          <a class="item-control item-edit" title="{{localize 'ROGUE.ItemEdit'}}"><i class="fas fa-edit"></i></a>
          <a class="item-control item-delete" title="{{localize 'ROGUE.ItemDelete'}}"><i class="fas fa-trash"></i></a>
        </div>
      </li>
    {{/each}}
  </ol>
</div>
