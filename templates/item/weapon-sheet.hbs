<form class="{{cssClass}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'ROGUE.Weapon'}}"/></h1>
      <div class="resources flexrow">
        {{> "systems/rogue/templates/item/parts/gear.hbs"}}
        <div class="resource">
          <label for="system.type" class="resource-label">{{localize 'ROGUE.WeaponType'}}:</label>
          <select name="system.type">
            {{#select system.type}}
              <option value="one-handed">{{localize 'ROGUE.OneHanded'}}</option>
              <option value="two-handed">{{localize 'ROGUE.TwoHanded'}}</option>
              <option value="none">-</option>
            {{/select}}
          </select>
        </div>
        {{#unless system.formula}}
          <div class="resource damage">
            <label for="system.damage" class="resource-label">{{localize 'ROGUE.DamageDice'}}:</label>
            <select name="system.damage">
              {{#select system.damage}}
                <option value="1d4">{{localize 'ROGUE.Dice.d4'}}</option>
                <option value="1d6">{{localize 'ROGUE.Dice.d6'}}</option>
                <option value="1d8">{{localize 'ROGUE.Dice.d8'}}</option>
                <option value="1d10">{{localize 'ROGUE.Dice.d10'}}</option>
                <option value="1d12">{{localize 'ROGUE.Dice.d12'}}</option>
              {{/select}}
            </select>
          </div>
        {{/unless}}
        <div class="resource ability">
          <label for="system.ability" class="resource-label">{{localize 'ROGUE.Ability'}}:</label>
          <select name="system.ability">
            {{#select system.ability}}
              <option value="str">{{localize 'ROGUE.Strength'}}</option>
              <option value="dex">{{localize 'ROGUE.Dexterity'}}</option>
              <option value="con">{{localize 'ROGUE.Constitution'}}</option>
              <option value="int">{{localize 'ROGUE.Intelligence'}}</option>
              <option value="wis">{{localize 'ROGUE.Wisdom'}}</option>
              <option value="cha">{{localize 'ROGUE.Charisma'}}</option>
            {{/select}}
          </select>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    <hr>
    {{!-- Description Tab --}}
    <div class="resource feature-formula">
      <input class="feature-checkbox" type="checkbox" name="system.formula" data-dtype="Boolean" {{#if system.formula}} checked {{/if}}/>
      <label for="system.damage" class="resource-label">{{localize 'ROGUE.Formula'}}:</label>
      {{#if system.formula}}
        <input type="text" name="system.damage" value="{{system.damage}}" data-dtype="String"/>
      {{/if}}
    </div>
    <div class="tab">
      {{editor enrichedDescription target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>
  </section>
</form>
