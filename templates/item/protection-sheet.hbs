<form class="{{cssClass}}" autocomplete="off">
  <header class="items-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="item-name"><input name="name" type="text" value="{{item.name}}" placeholder="{{localize 'ROGUE.Protection'}}"/></h1>
      <div class="resources flexrow">
        {{> "systems/rogue/templates/item/parts/gear.hbs"}}
        <div class="resource">
          <label for="system.defense" class="resource-label">
            <span>{{localize 'ROGUE.Defense'}}</span>
            <select name="system.defense.type">
              {{#select system.defense.type}}
              <option value="bonus">{{localize 'ROGUE.DefenseBonus'}}</option>
              <option value="flat">{{localize 'ROGUE.DefenseValue'}}</option>
              {{/select}}
            </select>
          </label>
          <input type="number" name="system.defense.value" value="{{system.defense.value}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Body --}}
  <section class="sheet-body">
    {{!-- Description Tab --}}
    <div class="tab">
      <hr>
      {{editor enrichedDescription target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>
  </section>

</form>
